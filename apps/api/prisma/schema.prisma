generator client {
  provider     = "prisma-client"
  output       = "../src/db/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  USER
}

enum UserContext {
  LUMIS
  KINDORA
}

enum PostStatus {
  DRAFT
  PENDING
  ACCEPTED
  REJECTED
  OPEN
  SUSPENDED
  REJECTED_AFTER_REPORT
  COMPLETED
  DELIVERED
  CLOSED
}

enum PostUpdateType {
  GENERAL
  DELIVERY
}

enum DonationStatus {
  PENDING
  SUCCESS
  FAILED
}

enum MediaType {
  IMAGE
  VIDEO
}

model User {
  id              String      @id @default(uuid())
  email           String      @unique
  username        String      @unique
  password        String?
  firstName       String?
  lastName        String?
  avatar          String?
  age             Int?
  country         String?     @default("VN")
  address         String?
  phoneNumber     String?
  role            UserRole    @default(USER)
  activeContext   UserContext @default(KINDORA)
  coins           Int         @default(0)
  emailVerifiedAt DateTime?

  posts             LumisPost[]
  donations         Donation[]
  medias            PostMedia[]
  verificationCodes VerificationCode[]
  auditLogs         AuditLog[]
  sessions          Session[]
  socialAccounts    SocialAccount[]
  notifications     Notification[]
  likes             PostLike[]
  comments          Comment[]
  reportsSubmitted  Report[]           @relation("ReportedBy")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Session {
  id           String   @id @default(uuid())
  refreshToken String   @unique
  userAgent    String?
  ipAddress    String?
  expiresAt    DateTime

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SocialAccount {
  id         String @id @default(uuid())
  provider   String // e.g., "GOOGLE"
  providerId String @unique

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationCode {
  id        String   @id @default(uuid())
  code      String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  type      String // e.g., "SIGNUP", "PASSWORD_RESET"
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model LumisPost {
  id               String     @id @default(uuid())
  title            String
  content          String
  currency         String     @default("VND")
  targetAmount     Decimal    @db.Decimal(15, 2)
  supportReceived  Decimal    @default(0) @db.Decimal(15, 2)
  status           PostStatus @default(DRAFT)
  isPostingForSelf Boolean    @default(true)
  adminComments    String?

  authorId String
  author   User   @relation(fields: [authorId], references: [id])

  proofs      ProofDocument[]
  bankDetails BankDetail[]
  donations   Donation[]
  medias      PostMedia[]
  likes       PostLike[]
  comments    Comment[]
  updates     PostUpdate[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProofDocument {
  id                String  @id @default(uuid())
  isVisibleToPublic Boolean @default(false)

  postId String
  post   LumisPost @relation(fields: [postId], references: [id])

  mediaId String    @unique // 1 Proof = 1 Media
  media   PostMedia @relation(fields: [mediaId], references: [id])

  createdAt DateTime @default(now())
}

model PostMedia {
  id           String    @id @default(uuid())
  url          String
  thumbnailUrl String?
  type         MediaType
  metadata     Json? // Lưu trữ { width, height, size, format }

  // Quan hệ với Post (Optional để upload trước khi tạo post)
  postId String?
  post   LumisPost? @relation(fields: [postId], references: [id], onDelete: Cascade)

  // Quan hệ với User (Ai là người upload)
  userId String
  user   User   @relation(fields: [userId], references: [id])

  // Quan hệ 1-1 với ProofDocument (Nếu media này được dùng làm proof)
  proofDocument ProofDocument?

  // Quan hệ với PostUpdate
  postUpdateId String?
  postUpdate   PostUpdate? @relation(fields: [postUpdateId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

model BankDetail {
  id            String    @id @default(uuid())
  bankName      String
  swiftCode     String?
  accountNumber String
  accountHolder String
  postId        String
  post          LumisPost @relation(fields: [postId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Donation {
  id          String         @id @default(uuid())
  amount      Decimal        @db.Decimal(15, 2)
  isAnonymous Boolean        @default(false)
  status      DonationStatus @default(PENDING)

  donorId String
  donor   User   @relation(fields: [donorId], references: [id])

  postId String
  post   LumisPost @relation(fields: [postId], references: [id])

  createdAt DateTime @default(now())
}

model AuditLog {
  id         String   @id @default(uuid())
  action     String
  actorId    String
  actor      User     @relation(fields: [actorId], references: [id])
  targetId   String?
  targetType String?
  payload    Json?
  createdAt  DateTime @default(now())
}

model Notification {
  id       String  @id @default(uuid())
  title    String
  content  String
  type     String // e.g., "SYSTEM", "DONATION", "POST_STATUS"
  metadata Json? // Lưu trữ { postId, donationId, ... }
  isRead   Boolean @default(false)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PostLike {
  id String @id @default(uuid())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  postId String
  post   LumisPost @relation(fields: [postId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, postId])
}

model Comment {
  id      String @id @default(uuid())
  content String

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  postId String
  post   LumisPost @relation(fields: [postId], references: [id], onDelete: Cascade)

  parentId String?
  parent   Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies  Comment[] @relation("CommentReplies")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PostUpdate {
  id      String         @id @default(uuid())
  title   String?
  content String
  type    PostUpdateType @default(GENERAL)

  postId String
  post   LumisPost @relation(fields: [postId], references: [id], onDelete: Cascade)

  medias PostMedia[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Report {
  id      String  @id @default(uuid())
  reason  String
  details String?

  reporterId String
  reporter   User   @relation("ReportedBy", fields: [reporterId], references: [id])

  targetId   String // ID của Post, Comment hoặc User bị report
  targetType String // "POST", "COMMENT", "USER"

  status String @default("PENDING") // PENDING, RESOLVED, REJECTED

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
